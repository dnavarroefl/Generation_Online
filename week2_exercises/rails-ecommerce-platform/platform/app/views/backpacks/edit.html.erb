<h1>Edit your backpack</h1>

<%= form_for :backpack, url: article_path(@backpack), method: :patch do |f| %>
  <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.label :capacity %><br>
    <%= f.text_area :capacity %>
  </p>

  <p>
    <%= f.label :pockets %><br>
    <%= f.text_area :pockets %>
  </p>

  <p>
    <%= f.label :waterproof %><br>
    <%= f.text_area :water %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
<%= link_to 'Back', backpacks_path%>
</p>