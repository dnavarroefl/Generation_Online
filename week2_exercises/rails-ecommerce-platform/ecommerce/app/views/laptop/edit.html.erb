<h1> Editing Laptops</h1>

<%= form_for :laptop, url: laptop_path(@laptop), method: :patch do |f| %>
  <p>
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>

  <p>
    <%= f.label :processor %><br>
    <%= f.text_area :processor %>
  </p>

  <p>
    <%= f.label :ram %><br>
    <%= f.text_area :ram %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', laptops_path%>